<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RSVPApp.Pages.RegisterPage"
    Title="Create Account">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Entry x:Name="NameEntry" Placeholder="Name" />
            <Entry x:Name="EmailEntry" Placeholder="E-Mail Address" Keyboard="Email" />
            <Entry x:Name="PhoneEntry" Placeholder="Mobile Phone Number" Keyboard="Telephone" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <Button Text="Create Account" Clicked="OnCreateClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>