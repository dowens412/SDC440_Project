<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RSVPApp.Pages.LoginPage"
    Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="RSVP App" FontSize="24" FontAttributes="Bold" />

            <Entry x:Name="EmailEntry" Placeholder="E-Mail Address" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <Button Text="Login" Clicked="OnLoginClicked" />
            <Button Text="Create Account" Clicked="OnCreateAccountClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>