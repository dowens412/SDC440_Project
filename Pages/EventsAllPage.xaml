<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RSVPApp.Pages.EventsAllPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Events - All">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Label x:Name="HeaderLabel" FontSize="18" FontAttributes="Bold" />

        <Button Text="Logout" Clicked="OnLogoutClicked" />

        <CollectionView x:Name="EventsList" SelectionMode="Single" SelectionChanged="OnEventSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="12">
                        <Label Text="{Binding EventName}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding HostName}" FontSize="13" />
                        <Label Text="{Binding EventDateTime}" FontSize="12" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Tap an event to view details (next step)." FontSize="12" />

    </VerticalStackLayout>
</ContentPage>
