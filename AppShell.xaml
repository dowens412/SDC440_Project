<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RSVPApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RSVPApp.Pages"
    Title="RSVPApp">

    <!-- Make Login the first ShellContent so it loads first -->
    <ShellContent
        Route="LoginPage"
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    <ShellContent
        Route="EventsAllPage"
        Title="Events"
        ContentTemplate="{DataTemplate pages:EventsAllPage}" />

</Shell>
